// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id    String  @default(uuid()) @id
  email String  @unique
  fullname  String
  password  String
  company_name  String
}

model Tax {
  id String @default(uuid()) @id
  name String
  rate Decimal
  product Product[]
}

model Product {
  id String @default(uuid()) @id
  name String
  sku String?
  uom String
  category String
  item_cost Decimal
  item_price Decimal
  stock Int? @default(0)
  created_by String 
  created_at DateTime @default(now())
  tax Tax @relation(fields: [tax_id], references: [id])
  tax_id String
}
